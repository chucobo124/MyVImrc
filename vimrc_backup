set encoding=utf-8
execute pathogen#infect()
syntax on
set nu
set hlsearch
set autoread
set autowrite

filetype plugin indent on
set directory=$HOME/.vim/tmp//
set backspace=2
set backspace=indent,eol,start

noremap <C-N> :cp<CR>
noremap <C-n> :cn<CR>

augroup auto_py
	autocmd BufNewFile,BufRead *.py set tabstop=4
	autocmd BufNewFile,BufRead *.py set softtabstop=4
	autocmd BufNewFile,BufRead *.py set shiftwidth=4
	autocmd BufNewFile,BufRead *.py set textwidth=79
	autocmd BufNewFile,BufRead *.py set expandtab
	autocmd BufNewFile,BufRead *.py set autoindent
	autocmd BufNewFile,BufRead *.py set fileformat=unix
augroup end

au BufNewFile *.js, *.html, *.css
    \set tabstop=2|
    \set softtabstop=2|
    \set shiftwidth=2

augroup auto_go
    autocmd BufWritePost *.go :GoBuild
    autocmd BufWritePost *_test.go :GoTest
    autocmd BufNewFile,BufRead *.go let g:go_fmt_command = "goimports"
    let g:go_test_show_name=1
augroup end 

"Open NERDTree automatically"
"autocmd VimEnter * NERDTree
noremap <C-Bslash> :NERDTreeToggle<CR>
noremap <C-h> :NERDTreeFind<CR>

"You completed me
let g:ycm_python_interpreter_path = ''
let g:ycm_python_sys_path = []
let g:ycm_extra_conf_vim_data = [
  \  'g:ycm_python_interpreter_path',
  \  'g:ycm_python_sys_path'
  \]
let g:ycm_global_ycm_extra_conf = '~/global_extra_conf.py'
let g:ycm_autoclose_preview_window_after_completion = 1
let g:ycm_autoclose_preview_window_after_insertion = 1
let g:ycm_add_preview_to_completeopt = 1
" Remove <Tab> from the list of keys mapped by YCM.
noremap gd :YcmCompleter GoToDefinition<CR>
noremap gs :YcmCompleter GoTo<CR>
let g:UltiSnipsExpandTrigger = "<s-tab>"
set list listchars=space:·,tab:→\ ,trail:·
